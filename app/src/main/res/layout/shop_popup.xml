<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad_20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_cost"
        android:layout_marginTop="@dimen/pad_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_20dp"
        android:inputType="number"
        android:ems="10"
        android:minHeight="80dp"
        android:id="@+id/movie_cost"
        android:hint="Enter movie cost"
        android:textColorHint="@color/colorPrimary" />
    </android.support.design.widget.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_below="@+id/input_layout_cost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="70dp"
        android:layout_marginLeft="@dimen/pad_30dp"
        android:layout_marginRight="@dimen/pad_30dp"
        android:text="Add to My Shop"
        style="@style/button"
        android:id="@+id/save"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
