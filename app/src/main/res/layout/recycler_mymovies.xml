<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        >

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/relativeLayout">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/movie_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Genre"
        android:id="@+id/movie_genre"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Name"
        android:id="@+id/movie_name"
        android:layout_alignTop="@+id/remove"
        android:layout_alignLeft="@+id/movie_genre"
        android:layout_alignStart="@+id/movie_genre"
        android:layout_above="@+id/movie_cost"
        android:layout_toLeftOf="@+id/remove"
        android:layout_toStartOf="@+id/remove" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="cost of movie"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:id="@+id/movie_cost"
        android:layout_alignBottom="@+id/movie_image"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:id="@+id/remove"
            android:layout_above="@+id/movie_cost"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
