<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/movie_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_title"
        android:layout_toEndOf="@+id/image_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cost"
        android:id="@+id/movie_cost"
        android:layout_alignBottom="@+id/image_title"
        android:layout_alignLeft="@+id/movie_name"
        android:layout_alignStart="@+id/movie_name" />

</RelativeLayout>
