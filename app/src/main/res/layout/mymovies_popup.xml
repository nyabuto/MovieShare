<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Share Movie"
        android:id="@+id/mymovies_popup_share"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add to Watchlist"
        android:id="@+id/mymovies_popup_watched"
        android:layout_below="@+id/mymovies_popup_share"
        android:layout_marginTop="14dp"
        style="@style/btn_defaultstyle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add to Wishlist"
        android:id="@+id/mymovies_popup_wished"
        android:layout_below="@+id/mymovies_popup_watched"
        style="@style/btn_defaultstyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Remove"
        style="@style/btn_defaultstyle"
        android:id="@+id/mymovies_popup_remove"
        android:layout_below="@+id/mymovies_popup_wished"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
