<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/material_blue_50"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
         android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        >
        <RelativeLayout android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:layout_width="match_parent"
            >
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/movie_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Movie Genre"
            android:id="@+id/movie_genre"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/movie_image"
            android:layout_toEndOf="@+id/movie_image" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Movie Name"
            android:id="@+id/movie_name"
            android:layout_alignTop="@+id/remove"
            android:layout_alignLeft="@+id/movie_genre"
            android:layout_alignStart="@+id/movie_genre"
            android:layout_above="@+id/username"
            android:layout_toLeftOf="@+id/remove"
            android:layout_toStartOf="@+id/remove" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:id="@+id/username"
            android:layout_alignBottom="@+id/movie_image"
            android:layout_toRightOf="@+id/movie_image"
            android:layout_toEndOf="@+id/movie_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="cost of movie"
            android:id="@+id/movie_cost"
            android:layout_alignBottom="@+id/username"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout android:layout_height="35dp"
        android:minHeight="35dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/accept"
            android:id="@+id/accept"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="99dp"
            android:layout_marginEnd="99dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/deny"
            android:id="@+id/deny"
            android:layout_toLeftOf="@+id/accept"
            android:layout_alignBottom="@+id/accept"
            android:layout_marginLeft="@dimen/pad_20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
